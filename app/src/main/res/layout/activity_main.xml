<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select Country"
        android:textColor="@color/purple_200"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="India"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="USA"
        android:id="@+id/us"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/in"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Zealand"
        android:id="@+id/ge"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/us"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Canada"
        android:textSize="18sp"
        android:id="@+id/dk"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/ge"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="United KingDom"
        android:id="@+id/uk"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/dk"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Australia"
        android:id="@+id/aus"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/uk"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="All"
        android:id="@+id/all"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@+id/aus"
        tools:layout_editor_absoluteX="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>